<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="230dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/transparent"
  android:foreground="@drawable/click_indicator_light"
  android:elevation="@dimen/ksr_card_elevation"
  android:layout_marginLeft="@dimen/grid_3"
  android:layout_marginRight="@dimen/grid_3"
  android:layout_marginTop="@dimen/grid_3" >

  <RelativeLayout
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include layout="@layout/project_card_photo_view"
      android:id="@+id/project_card_photo"
      android:layout_height="match_parent"
      android:layout_width="250dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"/>

    <RelativeLayout
      android:orientation="vertical"
      android:layout_alignTop="@id/project_card_photo"
      android:layout_alignBottom="@id/project_card_photo"
      android:layout_toEndOf="@id/project_card_photo"
      android:layout_toRightOf="@id/project_card_photo"
      android:layout_margin="@dimen/grid_2"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/name"
        android:text="Name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/created_by"
        android:layout_below="@id/name"
        android:textSize="@dimen/caption"
        android:text="by ___"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/blurb"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="@dimen/caption"
        android:paddingTop="@dimen/grid_2"
        android:paddingBottom="@dimen/grid_2"
        android:text="blurb"
        android:layout_below="@id/created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <LinearLayout
        android:id="@+id/category_location_view"
        android:layout_below="@id/blurb"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/grid_2">

        <com.kickstarter.ui.views.IconTextView
          android:id="@+id/category_icon"
          android:textSize="@dimen/caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingRight="@dimen/grid_1_half"
          android:paddingEnd="@dimen/grid_1_half"
          android:text="@string/local_offer_icon"
          android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/category"
          android:textSize="@dimen/caption"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/grid_1_half"
          android:paddingRight="@dimen/grid_1"
          android:textColor="@color/text_dark" />

        <com.kickstarter.ui.views.IconTextView
          android:id="@+id/location_icon"
          android:textSize="@dimen/caption"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/category"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/grid_1"
          android:paddingRight="@dimen/grid_1_half"
          android:text="@string/location_on_icon"
          android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/location"
          android:textSize="@dimen/caption"
          android:ellipsize="end"
          android:singleLine="true"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/location_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/grid_1_half"
          android:textColor="@color/text_dark" />

      </LinearLayout>

      <ProgressBar
        style="@style/KsrProgressBar"
        android:id="@+id/percentage_funded"
        android:layout_below="@id/category_location_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/progress_bar_min_height"
        android:progress="50" />

      <include layout="@layout/project_stats_view"
        android:id="@+id/project_stats_view"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_below="@id/percentage_funded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </RelativeLayout>

  </RelativeLayout>
</android.support.v7.widget.CardView>
