<resources>
  <style name="None">
  </style>

  <style name="KsrTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Shared view activity animations -->
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>

    <!-- Toolbar -->
    <!-- Using toolbar, so disable the action bar -->
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>

    <!-- Spinner -->
    <item name="android:spinnerItemStyle">@style/KsrSpinnerItem</item>
    <item name="android:spinnerStyle">@style/KsrSpinner</item>

    <!-- More on Color Palette:
      http://www.google.com/design/spec/style/color.html#color-color-palette
      http://developer.android.com/training/material/theme.html#ColorPalette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!-- colorAccent is used as the default value for colorControlActivated which
      is used to tint widgets -->
    <item name="colorAccent">@color/accent</item>
    <item name="android:textColorLink">@color/accent</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="ActivityFeedActivity" parent="KsrTheme">
    <item name="android:statusBarColor">@color/gray</item>
    <item name="android:windowBackground">@drawable/gray_gradient</item>
  </style>

  <style name="CheckoutActivity" parent="KsrTheme">
    <item name="android:statusBarColor">@color/gray</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="DiscoveryActivity" parent="KsrTheme">
    <item name="android:windowBackground">@color/light_gray</item>
  </style>

  <style name="HelpActivity" parent="KsrTheme">
    <item name="android:statusBarColor">@color/gray</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="Login" parent="KsrTheme">
    <item name="android:statusBarColor">@color/gray</item>
  </style>

  <style name="ProjectDetailActivity" parent="KsrTheme">
    <item name="android:statusBarColor">@color/black</item>
  </style>

  <style name="ThanksActivity" parent="KsrTheme">
    <item name="android:statusBarColor">@color/gray</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

  <!-- Style advice: http://blog.danlew.net/2014/11/19/styles-on-android/ -->
  <style name="KsrSpinner" parent="android:Widget">
    <item name="android:background">@drawable/ksr_spinner</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="KsrSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="KsrProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/ksr_progress_bar_horizontal</item>
  </style>
</resources>
