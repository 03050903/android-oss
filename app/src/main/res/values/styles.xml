<!--
  Naming guidelines: https://github.com/kickstarter/styleguide/tree/master/android#style-inheritance
  Other resources: https://kickstarter.wiki/pages/android-links.html#styles
-->
<resources>
  <style name="None">
  </style>

  <style name="KSTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Shared view activity animations -->
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>

    <!-- Pop-up menu -->
    <item name="popupMenuStyle">@style/PopupMenu</item>

    <!-- Toolbar -->
    <!-- Using toolbar, so disable the action bar -->
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>

    <!-- More on Color Palette:
      http://www.google.com/design/spec/style/color.html#color-color-palette
      http://developer.android.com/training/material/theme.html#ColorPalette -->

    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <!-- colorAccent is used as the default value for colorControlActivated which
      is used to tint widgets -->
    <item name="colorAccent">@color/accent</item>
    <item name="android:colorControlHighlight">@color/accent_alpha_20</item>
    <item name="android:textColorLink">@color/accent</item>
    <item name="android:textColorPrimary">@color/text_primary</item>
    <item name="android:textColorSecondary">@color/text_secondary</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="HamburgerStatusBar" parent="KSTheme">
    <item name="colorPrimaryDark">@color/hamburger_statusbar</item>
  </style>

  <!-- Activities -->
  <style name="ActivityFeedActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/activity_feed_background</item>
  </style>

  <style name="CheckoutActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="CommentFeedActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="DiscoveryActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/discovery_background</item>
  </style>

  <style name="DiscoveryFilterActivity" parent="KSTheme">
  </style>

  <style name="DisplayWebViewActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="HamburgerActivity" parent="HamburgerStatusBar">
    <item name="android:windowBackground">@color/discovery_background</item>
  </style>

  <style name="HelpActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="Login" parent="KSTheme">
    <item name="android:windowBackground">@color/light_gray</item>
    <item name="android:popupMenuStyle">@style/PopupMenu</item>
  </style>

  <style name="ProjectActivity" parent="KSTheme">
  </style>

  <style name="SearchActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="ThanksActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <style name="VideoPlayerActivity" parent="KSTheme">
    <item name="android:statusBarColor">@color/transparent</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@color/black</item>
  </style>

  <style name="ViewPledgeActivity" parent="KSTheme">
    <item name="android:windowBackground">@color/white</item>
  </style>

  <!-- Widgets -->
  <style name="PopupMenu" parent="Base.Widget.AppCompat.PopupMenu">
    <item name="android:popupBackground">@drawable/dialog_alert_rounded</item>
    <item name="android:dropDownVerticalOffset">@dimen/popup_menu_vertical_offset</item>
    <item name="android:dropDownHorizontalOffset">@dimen/popup_menu_horizontal_offset</item>
  </style>

  <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/progress_bar_horizontal</item>
  </style>

  <style name="Button" parent="Base.Widget.AppCompat.Button">
    <item name="android:textColor">@drawable/button_text_white</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/grid_3</item>
    <item name="android:paddingRight">@dimen/grid_3</item>
  </style>

  <style name="BorderButton" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:background">@drawable/button_white_border_dark_gray</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/grid_3</item>
    <item name="android:paddingRight">@dimen/grid_3</item>
  </style>

  <style name="FacebookButton" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:background">@drawable/button_facebook</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:singleLine">true</item>
    <item name="android:text">@string/login_tout_buttons_log_in_with_facebook</item>
    <item name="android:paddingLeft">@dimen/grid_1</item>
    <item name="android:paddingRight">@dimen/grid_3</item>
    <item name="android:drawableLeft">@drawable/ic_social_facebook</item>
    <item name="android:drawableStart">@drawable/ic_social_facebook</item>
  </style>

  <style name="GreenRoundedButton" parent="Button">
    <item name="android:background">@drawable/button_green_rounded</item>
  </style>

  <style name="TwitterButton" parent="Base.Widget.AppCompat.Button.Borderless">
    <item name="android:background">@drawable/button_twitter</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:singleLine">true</item>
    <item name="android:paddingLeft">@dimen/grid_1</item>
    <item name="android:paddingRight">@dimen/grid_3</item>
    <item name="android:drawableLeft">@drawable/ic_social_twitter</item>
    <item name="android:drawableStart">@drawable/ic_social_twitter</item>
  </style>

  <style name="ProjectActionButton" parent="Button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">60dp</item>
    <item name="android:textSize">@dimen/subhead</item>
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <style name="KSSettingsMailIcon">
    <item name="android:text">@string/mail_icon</item>
    <item name="android:focusable">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:textSize">@dimen/subhead</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">@dimen/settings_icon_fixed_width</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">3dp</item>
    <item name="android:background">@drawable/click_indicator_light</item>
  </style>

  <style name="EndSettingsWidget">
    <item name="android:layout_centerVertical">true</item>
    <item name="android:textSize">@dimen/settings_icon</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_alignParentEnd">true</item>
  </style>

  <style name="HamburgerToolbarIcon" parent="ToolbarIcon">
    <item name="android:background">@drawable/button_selector</item>
    <item name="android:focusable">true</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="KSSettingsPhoneIcon" parent="EndSettingsWidget">
    <item name="android:focusable">true</item>
    <item name="android:layout_marginRight">@dimen/grid_1</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">@dimen/settings_icon_fixed_width</item>
    <item name="android:background">@drawable/click_indicator_light</item>
    <item name="android:text">@string/phone_android_icon</item>
  </style>

  <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
    <item name="android:background">@color/primary</item>
    <item name="android:elevation">1dp</item>
    <item name="android:foregroundGravity">center_vertical</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="ToolbarIcon">
    <item name="android:background">@drawable/click_indicator_light</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">@dimen/button_icon_fixed_width</item>
    <item name="android:maxWidth">@dimen/button_icon_fixed_width</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/primary_dark</item>
    <item name="android:textSize">@dimen/icon</item>
  </style>

  <style name="ToolbarTitle" parent="SubheadPrimary">
    <item name="android:color">@color/black</item>
    <item name="android:textColorHint">@color/dark_gray</item>
  </style>

  <!-- Reduce margin size for < v21 devices, due to different FAB shadow rendering -->
  <style name="StarFab">
    <item name="android:layout_marginRight">@dimen/grid_1</item>
    <item name="android:layout_marginBottom">@dimen/grid_1</item>
  </style>

  <!-- Typography -->
  <style name="TextPrimary">
    <item name="android:textColor">@color/text_primary</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>
  
  <style name="TextSecondary">
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="CaptionPrimary" parent="TextPrimary">
    <item name="android:textSize">@dimen/caption</item>
    <item name="android:lineSpacingExtra">@dimen/caption_line_spacing_extra</item>
  </style>

  <style name="CaptionPrimaryMedium" parent="CaptionPrimary">
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <style name="CaptionSecondary" parent="TextSecondary">
    <item name="android:textSize">@dimen/caption</item>
    <item name="android:lineSpacingExtra">@dimen/caption_line_spacing_extra</item>
  </style>

  <style name="CaptionSecondaryMedium" parent="CaptionSecondary">
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <style name="BodyPrimary" parent="TextPrimary">
    <item name="android:textSize">@dimen/body</item>
    <item name="android:lineSpacingExtra">@dimen/body_line_spacing_extra</item>
  </style>

  <style name="BodyPrimaryMedium" parent="BodyPrimary">
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>
  
  <style name="BodySecondary" parent="TextSecondary">
    <item name="android:textSize">@dimen/body</item>
    <item name="android:lineSpacingExtra">@dimen/body_line_spacing_extra</item>
  </style>

  <style name="SubheadPrimary" parent="TextPrimary">
    <item name="android:textSize">@dimen/subhead</item>
    <item name="android:lineSpacingExtra">@dimen/subhead_line_spacing_extra</item>
  </style>

  <style name="SubheadPrimaryMedium" parent="SubheadPrimary">
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <style name="SubheadSecondaryMedium" parent="TextSecondary">
    <item name="android:textSize">@dimen/subhead</item>
    <item name="android:lineSpacingExtra">@dimen/subhead_line_spacing_extra</item>
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <style name="Headline" parent="TextPrimary">
    <item name="android:textSize">@dimen/headline</item>
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <style name="EditorialHeadline" parent="TextPrimary">
    <item name="android:textSize">@dimen/editorial_headline</item>
    <item name="android:fontFamily">@string/font_family_medium</item>
  </style>

  <!-- Cards -->
  <style name="ActivityFeedCard">
    <item name="android:foreground">@drawable/click_indicator_light</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/activity_feed_view_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/activity_feed_view_margin_bottom</item>
    <item name="android:layout_width">match_parent</item>
    <item name="cardBackgroundColor">@color/white</item>
    <item name="cardCornerRadius">0dp</item>
    <item name="cardElevation">0dp</item>
  </style>

</resources>
