<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/card_view"
  android:focusable="true"
  android:layout_width="200dp"
  android:layout_height="150dp"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/blue"
  android:layout_marginLeft="@dimen/grid_1_half"
  android:layout_marginRight="@dimen/grid_1_half">

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/explore_text_view"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/grid_1_half"
      android:textSize="18sp"
      android:textColor="@color/white" />

    <TextView
      android:id="@+id/live_projects_text_view"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:textColor="@color/white" />

  </LinearLayout>

</android.support.v7.widget.CardView>
