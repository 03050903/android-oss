<?xml version="1.0" encoding="utf-8"?>
<com.kickstarter.ui.toolbars.SearchToolbar
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/Toolbar"
  android:id="@+id/search_toolbar"
  app:contentInsetLeft="0dp"
  app:contentInsetStart="0dp"
  tools:showIn="@layout/search_layout">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.kickstarter.ui.views.IconTextView
      style="@style/ToolbarIcon"
      android:id="@+id/back_button"
      android:focusable="true"
      android:contentDescription="@string/nav_back_button_content_description"
      android:layout_weight="0"
      android:text="@string/arrow_back_icon" />

    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="match_parent">

      <EditText
        style="@style/ToolbarTitle"
        android:id="@+id/search_edit_text"
        android:layout_marginStart="@dimen/grid_1_half"
        android:layout_marginLeft="@dimen/grid_1_half"
        android:layout_marginEnd="@dimen/grid_1"
        android:layout_marginRight="@dimen/grid_1"
        android:background="@color/transparent"
        android:maxLength="25"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        android:singleLine="true"
        android:hint="@string/Search_projects"
        android:textCursorDrawable="@null" />

      <com.kickstarter.ui.views.IconTextView
        style="@style/ToolbarIcon"
        android:id="@+id/clear_button"
        android:focusable="true"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/close_icon"
        android:contentDescription="@string/close_button_content_description"/>

    </RelativeLayout>

  </LinearLayout>

</com.kickstarter.ui.toolbars.SearchToolbar>
