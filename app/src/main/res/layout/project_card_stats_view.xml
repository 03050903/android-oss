<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:showIn="@layout/project_card_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
      android:id="@+id/backers_count"
      android:text="12,000"
      style="@style/CaptionPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/discovery_baseball_card_stats_backers"
      style="@style/CaptionSecondary" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/grid_4"
    android:layout_marginStart="@dimen/grid_4">
    <TextView
      android:id="@+id/percent"
      android:text="85%"
      style="@style/CaptionPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/discovery_baseball_card_stats_funded"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/CaptionSecondary" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
      android:id="@+id/deadline_countdown"
      android:singleLine="true"
      android:text="5"
      style="@style/CaptionPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/deadline_countdown_unit"
      android:text="dias mas"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/CaptionSecondary" />
  </LinearLayout>


</LinearLayout>
