<?xml version="1.0" encoding="utf-8"?>
<com.kickstarter.ui.views.DebugNotificationsView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/grid_2"
  android:paddingBottom="@dimen/grid_3"
  android:paddingLeft="@dimen/grid_3"
  android:paddingRight="@dimen/grid_3">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      android:textColor="@color/dark_gray"
      android:text="Device registration" />

    <Button
      android:id="@+id/register_device_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/button_green"
      android:textAllCaps="false"
      android:text="Register device"
      style="@style/KsrButton" />

    <Button
      android:id="@+id/unregister_device_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/button_green"
      android:layout_marginBottom="@dimen/grid_2"
      android:textAllCaps="false"
      android:text="Unregister device"
      style="@style/KsrButton" />

    <include
      android:layout_marginTop="@dimen/grid_1"
      android:layout_marginBottom="@dimen/grid_1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      layout="@layout/horizontal_line_thin_view" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/grid_2"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      android:textColor="@color/dark_gray"
      android:text="Simulate notifications" />

    <Button
      android:id="@+id/simulate_project_success_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/button_green"
      android:textAllCaps="false"
      android:text="Project success"
      style="@style/KsrButton" />

  </LinearLayout>

</com.kickstarter.ui.views.DebugNotificationsView>
