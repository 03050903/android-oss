<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/black"
  android:orientation="vertical">

  <VideoView
    android:id="@+id/project_detail_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"/>

  <ImageView
    android:id="@+id/project_detail_photo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"/>

  <com.kickstarter.ui.views.IconTextView
    icon_text_view:iconType="material"
    android:id="@+id/play_button_overlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:textSize="@dimen/notification_large_icon_height"
    android:text="play_circle_outline"
    android:textColor="@color/white" />



</FrameLayout>