<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/white"
  android:layout_marginTop="@dimen/activity_feed_view_margin_top"
  android:layout_marginBottom="@dimen/activity_feed_view_margin_bottom">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
      android:id="@+id/project_info"
      android:clickable="true"
      android:background="@drawable/click_indicator_light_masked"
      android:paddingTop="@dimen/grid_3"
      android:paddingLeft="@dimen/grid_3"
      android:paddingRight="@dimen/grid_3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">

      <ImageView
        android:id="@+id/project_photo"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_2"
        android:layout_width="@dimen/activity_feed_small_photo_width"
        android:layout_height="@dimen/activity_feed_small_photo_height" />

      <TextView
        android:id="@+id/project_name"
        android:layout_toRightOf="@id/project_photo"
        android:layout_toEndOf="@id/project_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_2"
        android:text="Project Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

      <include layout="@layout/horizontal_line_thin_view"
        android:layout_toRightOf="@id/project_photo"
        android:layout_toEndOf="@id/project_photo"
        android:layout_alignStart="@id/project_name"
        android:layout_alignLeft="@id/project_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/project_photo" />

    </RelativeLayout>

    <LinearLayout
      android:id="@+id/update_info"
      android:clickable="true"
      android:background="@drawable/click_indicator_light_masked"
      android:padding="@dimen/grid_3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/update_sequence"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Update #"
          android:textColor="@color/green"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:text="Timestamp"
          android:textColor="@color/dark_gray"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:id="@+id/timestamp" />
      </RelativeLayout>

      <TextView
        android:id="@+id/update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1"
        android:text="Update Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/update_body"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/grid_1"
          android:text="Update Body"/>

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
