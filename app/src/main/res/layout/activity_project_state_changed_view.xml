<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@android:color/transparent"
  android:layout_marginTop="@dimen/card_margin_y"
  android:layout_marginBottom="@dimen/card_margin_y">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/project_photo"
      android:background="@android:color/transparent"
      android:adjustViewBounds="true"
      android:layout_width="@dimen/activity_feed_medium_photo_width"
      android:layout_height="@dimen/activity_feed_medium_photo_height" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minHeight="@dimen/activity_feed_medium_photo_height"
      android:layout_weight="1"
      android:gravity="center"
      android:padding="@dimen/grid_1"
      android:background="@color/dark_gray">

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Project state change."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white" />

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
