<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/card_view"
  android:foreground="@drawable/click_indicator_light"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardBackgroundColor="@color/white"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:contentPaddingTop="@dimen/grid_3"
  card_view:contentPaddingBottom="@dimen/grid_3"
  card_view:contentPaddingLeft="@dimen/grid_3"
  card_view:contentPaddingRight="@dimen/grid_3"
  android:layout_marginTop="@dimen/activity_feed_view_margin_top"
  android:layout_marginBottom="@dimen/activity_feed_view_margin_bottom">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/project_photo"
      android:background="@drawable/gray_gradient"
      android:adjustViewBounds="true"
      android:layout_width="@dimen/activity_feed_medium_photo_width"
      android:layout_height="@dimen/activity_feed_medium_photo_height" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/grid_2"
      android:layout_marginStart="@dimen/grid_2"
      android:minHeight="@dimen/activity_feed_medium_photo_height"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:padding="@dimen/grid_1">

      <TextView
        style="@style/BodyPrimary"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project state change" />

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
