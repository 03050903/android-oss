<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/project_search_result_view"
  android:orientation="vertical"
  android:background="@drawable/click_indicator_light_masked"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="@dimen/grid_2"
  android:paddingRight="@dimen/grid_2"
  android:paddingTop="@dimen/grid_2">

  <RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/project_image_view"
      android:adjustViewBounds="true"
      android:layout_marginRight="@dimen/grid_2"
      android:layout_marginEnd="@dimen/grid_2"
      android:layout_width="80dp"
      android:layout_height="60dp" />

    <LinearLayout
      android:orientation="vertical"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@id/project_image_view"
      android:layout_toEndOf="@id/project_image_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/project_name_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1_half"
        android:singleLine="true"
        android:text="Name"
        style="@style/TextPrimary.Subhead.Medium" />

      <TextView
        android:id="@+id/creator_name_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1_half"
        android:singleLine="true"
        android:text="by Creator"
        style="@style/TextSecondary.Caption" />
    </LinearLayout>

 </RelativeLayout>

  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/grid_2"
    android:background="@color/black_alpha_5" />

</LinearLayout>
