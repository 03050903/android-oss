<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@color/white"
  android:layout_marginTop="@dimen/keyline_1_half"
  android:layout_marginBottom="@dimen/keyline_1_half"
  android:paddingLeft="@dimen/keyline_1"
  android:paddingRight="@dimen/keyline_1"
  android:paddingBottom="@dimen/keyline_1"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/keyline_1_half"
    android:layout_marginBottom="@dimen/keyline_1_half"
    android:gravity="center_vertical">

    <ImageView
      android:id="@+id/backer_photo"
      android:adjustViewBounds="true"
      android:background="#cc3333"
      android:layout_marginRight="@dimen/keyline_1_half"
      android:layout_width="@dimen/activity_feed_photo_width"
      android:layout_height="@dimen/activity_feed_photo_height" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/keyline_1_half"
      android:text="Tieg Zaharia backed a Technology project."
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      android:textColor="@color/text_dark"
      android:layout_weight="1"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/keyline_1_half">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/keyline_1_half"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/keyline_1_half"
        android:text="The Future Chronicles #1 Internet - A Time Travel Magazine"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/text_dark" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by HYPERRAUM"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/dark_gray" />

    </LinearLayout>

    <ImageView
      android:background="#ccccff"
      android:layout_marginLeft="@dimen/keyline_1_half"
      android:layout_width="@dimen/activity_feed_photo_width"
      android:layout_height="@dimen/activity_feed_photo_height" />

  </LinearLayout>

</LinearLayout>
