<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/white"
  card_view:contentPaddingLeft="@dimen/keyline_1"
  card_view:contentPaddingRight="@dimen/keyline_1"
  android:layout_marginTop="@dimen/card_margin_y"
  android:layout_marginBottom="@dimen/card_margin_y">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/keyline_1_half"
      android:layout_marginBottom="@dimen/keyline_1_half"
      android:gravity="center_vertical">

      <ImageView
        android:id="@+id/avatar"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/keyline_1_half"
        android:layout_width="@dimen/activity_feed_avatar_width"
        android:layout_height="@dimen/activity_feed_avatar_height" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_1_half"
        android:text="Tieg Zaharia backed a Technology project."
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/text_dark"
        android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/keyline_1_half">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/keyline_1_half"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/project_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/keyline_1_half"
          android:text="Project Name"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/text_dark" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="by HYPERRAUM"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/dark_gray" />

      </LinearLayout>

      <ImageView
        android:background="#ccccff"
        android:layout_marginLeft="@dimen/keyline_1_half"
        android:layout_width="@dimen/activity_feed_photo_width"
        android:layout_height="@dimen/activity_feed_photo_height" />

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
