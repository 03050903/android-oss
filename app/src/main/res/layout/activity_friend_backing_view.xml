<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/friend_backing_card_view"
  android:foreground="@drawable/click_indicator_light"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/white"
  card_view:contentPaddingTop="@dimen/grid_3"
  card_view:contentPaddingBottom="@dimen/grid_3"
  card_view:contentPaddingLeft="@dimen/grid_3"
  card_view:contentPaddingRight="@dimen/grid_3"
  android:layout_marginTop="@dimen/card_margin_y"
  android:layout_marginBottom="@dimen/card_margin_y">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/grid_1"
      android:gravity="center_vertical">

      <ImageView
        android:id="@+id/avatar"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_2"
        android:layout_width="@dimen/activity_feed_avatar_width"
        android:layout_height="@dimen/activity_feed_avatar_height" />

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_2"
        android:text="Friend Name backed a Category project"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/text_dark"
        android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/grid_1">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_2"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/project_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/grid_1"
          android:text="Project Name"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/creator_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Creator Name"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/dark_gray" />

      </LinearLayout>

      <ImageView
        android:id="@+id/project_photo"
        android:layout_marginLeft="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_width="@dimen/activity_feed_small_photo_width"
        android:layout_height="@dimen/activity_feed_small_photo_height" />

    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>
