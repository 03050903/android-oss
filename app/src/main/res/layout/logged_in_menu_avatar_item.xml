<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/off_white"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/avatar"
    android:layout_width="@dimen/grid_3"
    android:layout_height="@dimen/grid_3"
    android:layout_marginLeft="@dimen/grid_2"
    android:layout_marginTop="@dimen/grid_2"
    android:scaleType="centerCrop"/>

  <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BodyPrimaryMedium"
    android:id="@+id/menu_item_title"
    android:text="Test"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/grid_1"
    android:layout_marginTop="@dimen/grid_2" />

</LinearLayout>
