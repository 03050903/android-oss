<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@android:color/background_dark"
  tools:context="com.kickstarter.ui.activities.ProjectDetailActivity">

  <ImageView
    android:id="@+id/photo"
    android:adjustViewBounds="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/keyline_1"
    android:orientation="vertical">

    <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
      android:textColor="@color/text_dark"
      android:paddingBottom="@dimen/keyline_1_half" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/keyline_1_half">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/by_"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/text_dark" />

      <TextView
        android:id="@+id/creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/text_dark" />
    </LinearLayout>

    <TextView
      android:id="@+id/blurb"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body2"
      android:textColor="@color/text_dark"
      android:paddingBottom="@dimen/keyline_1_half" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingBottom="@dimen/keyline_1_half">

      <com.kickstarter.ui.views.IonIconTextView
        android:id="@+id/category_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/card_padding_action_half"
        android:text="@string/ion_pricetag"
        android:textColor="@color/text_dark" />

      <TextView
        android:id="@+id/category"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/category_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_padding_action_half"
        android:paddingRight="@dimen/card_padding_action"
        android:textColor="@color/text_dark" />

      <com.kickstarter.ui.views.IonIconTextView
        android:id="@+id/location_icon"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_padding_action"
        android:paddingRight="@dimen/card_padding_action_half"
        android:text="@string/ion_location"
        android:textColor="@color/text_dark" />

      <TextView
        android:id="@+id/location"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_padding_action_half"
        android:textColor="@color/text_dark" />

    </LinearLayout>

    <ProgressBar
      style="@style/KsrProgressBar"
      android:id="@+id/percentage_funded"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="@dimen/progress_bar_min_height"
      android:paddingTop="@dimen/keyline_1_half"
      android:paddingBottom="@dimen/keyline_1_half"
      android:progress="50" />

    <include layout="@layout/project_stats_layout" />
  </LinearLayout>
</LinearLayout>
