<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  android:layout_height="fill_parent"
  android:layout_width="match_parent" >

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <include android:id="@+id/video"
        layout="@layout/project_media_header" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/keyline_1_half"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/project_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@color/link_selector"
          android:paddingBottom="@dimen/keyline_1_half" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/keyline_1_half">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/text_dark" />

          <TextView
            android:id="@+id/creator_name"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/text_dark" />
        </LinearLayout>

        <com.kickstarter.ui.views.TiemposTextView
          android:id="@+id/blurb"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/keyline_1_half"
          android:layout_marginBottom="@dimen/keyline_1_half"
          android:textSize="17sp"
          android:textColor="@color/text_dark"
          android:paddingBottom="@dimen/keyline_1_half" />

        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingBottom="@dimen/keyline_1_half">

          <com.kickstarter.ui.views.IconTextView
            icon_text_view:iconType="material"
            android:id="@+id/category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/card_padding_action_half"
            android:text="local_offer"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_dark" />

          <TextView
            android:id="@+id/category"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_action_half"
            android:paddingRight="@dimen/card_padding_action"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_dark" />

          <com.kickstarter.ui.views.IconTextView
            icon_text_view:iconType="material"
            android:id="@+id/location_icon"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_action"
            android:paddingRight="@dimen/card_padding_action_half"
            android:text="location_on"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_dark" />

          <TextView
            android:id="@+id/location"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_action_half"
            android:layout_centerInParent="true"
            android:textColor="@color/text_dark" />

          <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/Share"
            android:onClick="shareOnClick" />
        </RelativeLayout>

        <ProgressBar
          style="@style/KsrProgressBar"
          android:id="@+id/percentage_funded"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/progress_bar_min_height"
          android:paddingTop="@dimen/keyline_1_half"
          android:paddingBottom="@dimen/keyline_1_half"
          android:progress="50" />

        <include layout="@layout/project_stats_view" />

        <include layout="@layout/project_creator_info" />
      </LinearLayout>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/rewards_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      </android.support.v7.widget.RecyclerView>
    </LinearLayout>
  </ScrollView>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/keyline_1"
    android:onClick="backProjectButtonOnClick"
    android:layout_alignParentBottom="true"
    android:text="@string/Back_this_project" />
</RelativeLayout>
