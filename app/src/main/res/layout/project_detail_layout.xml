<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  android:layout_height="fill_parent"
  android:layout_width="match_parent" >

  <!-- todo: dynamic bottom margin-->
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/grid_3">

    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >

      <include android:id="@+id/video"
        layout="@layout/project_media_header" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="@dimen/grid_3"
        android:paddingLeft="@dimen/grid_3"
        android:paddingRight="@dimen/grid_3"
        android:orientation="vertical" >

        <TextView
          android:id="@+id/project_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/title"
          android:textColor="@color/text_dark"
          android:paddingBottom="@dimen/grid_1_half" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" >

          <TextView
            android:id="@+id/creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ksr_caption"
            android:textColor="@color/text_dark"
            android:clickable="true"
            android:onClick="creatorNameOnClick" />
        </LinearLayout>

        <com.kickstarter.ui.views.TiemposTextView
          android:id="@+id/blurb"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/grid_3"
          android:layout_marginBottom="@dimen/grid_3"
          android:textSize="@dimen/body"
          android:textColor="@color/text_dark"
          android:onClick="blurbOnClick"
          android:clickable="true"
          android:paddingBottom="@dimen/keyline_1_half" />

        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal" >

          <com.kickstarter.ui.views.IconTextView
            icon_text_view:iconType="material"
            android:id="@+id/category_icon"
            android:textSize="@dimen/ksr_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/grid_1_half"
            android:text="@string/local_offer_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_dark" />

          <TextView
            android:id="@+id/category"
            android:textSize="@dimen/ksr_caption"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grid_1_half"
            android:paddingRight="@dimen/grid_1"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_dark" />

          <com.kickstarter.ui.views.IconTextView
            icon_text_view:iconType="material"
            android:id="@+id/location_icon"
            android:textSize="@dimen/ksr_caption"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grid_1"
            android:paddingRight="@dimen/grid_1_half"
            android:text="@string/location_on_icon"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_dark" />

          <!-- todo: set correct button size-->
          <Button
            android:id="@+id/share_button"
            android:background="@drawable/button_share"
            android:textSize="@dimen/ksr_caption"
            android:layout_width="@dimen/grid_10"
            android:layout_height="@dimen/grid_4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/Share"
            android:textAllCaps="false"
            android:onClick="shareOnClick" />

          <TextView
            android:id="@+id/location"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/ksr_caption"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/location_icon"
            android:layout_toEndOf="@id/location_icon"
            android:layout_toLeftOf="@id/share_button"
            android:layout_toStartOf="@id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grid_1_half"
            android:paddingRight="@dimen/grid_1"
            android:layout_centerInParent="true"
            android:textColor="@color/text_dark" />
        </RelativeLayout>

        <ProgressBar
          style="@style/KsrProgressBar"
          android:id="@+id/percentage_funded"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/progress_bar_min_height"
          android:layout_marginTop="@dimen/grid_3"
          android:progress="50" />

        <include layout="@layout/project_stats_view" />

        <!-- todo: fill screen with this-->
        <include layout="@layout/horizontal_line_view" />

        <include layout="@layout/project_creator_info" />

      </LinearLayout>
    </LinearLayout>
  </ScrollView>

  <RelativeLayout
    android:layout_alignParentBottom="true"
    android:elevation="@dimen/ksr_card_elevation"
    android:background="@color/window_background"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.kickstarter.ui.views.IconTextView
      icon_text_view:iconType="material"
      android:id="@+id/exit_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textSize="@dimen/abc_text_size_large_material"
      android:paddingLeft="@dimen/grid_3"
      android:text="@string/share_icon"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:textColor="@drawable/text_selector"
      android:onClick="shareOnClick" />

    <!-- todo: set correct button size-->
    <Button
      android:layout_width="175dp"
      android:layout_height="35dp"
      android:layout_centerInParent="true"
      android:layout_marginTop="@dimen/grid_3"
      android:onClick="backProjectButtonOnClick"
      android:background="@drawable/button_green"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:text="@string/Back_this_project" />

    <com.kickstarter.ui.views.IconTextView
      icon_text_view:iconType="material"
      android:id="@+id/star_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:textSize="@dimen/abc_text_size_large_material"
      android:paddingRight="@dimen/grid_3"
      android:text="@string/star_icon"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:textColor="@drawable/text_selector"
      android:onClick="starProjectClick" />
  </RelativeLayout>
</RelativeLayout>
