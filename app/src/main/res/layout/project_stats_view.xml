<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/grid_3"
  android:paddingBottom="@dimen/grid_3"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/grid_3">

    <TextView
      android:id="@+id/backers_count"
      android:textSize="@dimen/ksr_stats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_dark" />

    <TextView
      android:textSize="@dimen/ksr_mini_stats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/backers"
      android:textColor="@color/dark_gray" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/grid_3">

    <TextView
      android:id="@+id/pledged"
      android:textSize="@dimen/ksr_stats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_dark" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pledged_of_"
        android:textColor="@color/dark_gray" />

      <TextView
        android:id="@+id/goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/grid_3">

    <TextView
      android:id="@+id/deadline_countdown"
      android:textSize="@dimen/ksr_stats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/text_dark" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/deadline_countdown_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_to_go"
        android:textColor="@color/dark_gray" />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
