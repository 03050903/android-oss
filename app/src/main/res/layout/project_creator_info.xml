<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:padding="@dimen/keyline_1" >

  <RelativeLayout
    android:id="@+id/creator_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/keyline_1"
    android:paddingTop="@dimen/keyline_1">

    <TextView
      android:id="@+id/created_by"
      android:textSize="@dimen/abc_text_size_medium_material"
      android:textColor="@color/text_primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true" />

    <!-- todo: circle dimensions-->
    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/avatar"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:scaleType="centerCrop" />
  </RelativeLayout>

  <LinearLayout
    android:orientation="vertical"
    android:id="@+id/creator_links"
    android:paddingTop="@dimen/keyline_1"
    android:paddingBottom="@dimen/keyline_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/creator_info"
    android:divider="@color/gray"
    android:dividerHeight="1dp" >

    <RelativeLayout
      android:id="@+id/campaign"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="blurbOnClick" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@drawable/text_selector"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:text="@string/Campaign" />

      <com.kickstarter.ui.views.IconTextView
        icon_text_view:iconType="material"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chevron_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <include layout="@layout/horizontal_line_view" />

    <RelativeLayout
      android:id="@+id/updates"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="updatesClick" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@drawable/text_selector"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:text="@string/Updates" />

      <!-- todo: replace with icon-->
      <TextView
        android:layout_centerVertical="true"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/updates_count"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <include layout="@layout/horizontal_line_view" />

    <RelativeLayout
      android:id="@+id/comments"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="commentsClick" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@drawable/text_selector"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:text="@string/Comments" />

      <!-- todo: replace with icon-->
      <TextView
        android:layout_centerVertical="true"
        android:textSize="@dimen/abc_text_size_large_material"
        android:id="@+id/comments_count"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
  </LinearLayout>

  <TextView
    android:id="@+id/fund_message"
    android:textColor="@color/text_secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/creator_links"
    android:paddingTop="@dimen/keyline_1"
    android:paddingBottom="@dimen/keyline_1"/>

</RelativeLayout>
