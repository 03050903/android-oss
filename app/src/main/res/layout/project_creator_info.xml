<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:paddingRight="@dimen/grid_3"
  android:paddingLeft="@dimen/grid_3">

  <RelativeLayout
    android:id="@+id/creator_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/grid_3"
    android:paddingTop="@dimen/grid_3"
    android:onClick="creatorNameOnClick">

    <TextView
      android:id="@+id/created_by"
      android:text="@string/Created_by"
      android:paddingTop="@dimen/grid_1"
      android:textSize="@dimen/ksr_subhead"
      android:textColor="@color/text_dark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <ImageView
      android:id="@+id/avatar"
      android:layout_width="@dimen/project_avatar_width"
      android:layout_height="@dimen/project_avatar_height"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:scaleType="centerCrop" />

    <TextView
      android:id="@+id/avatar_name"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_toLeftOf="@id/avatar"
      android:layout_toStartOf="@id/avatar"
      android:ellipsize="marquee"
      android:textSize="@dimen/ksr_name"
      android:textStyle="bold"
      android:layout_below="@id/created_by"
      android:textColor="@color/text_dark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </RelativeLayout>

  <LinearLayout
    android:orientation="vertical"
    android:id="@+id/creator_links"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/creator_info"
    android:divider="@color/gray"
    android:dividerHeight="1dp" >

    <RelativeLayout
      android:id="@+id/campaign"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_11_half"
      android:onClick="blurbOnClick" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@drawable/text_selector"
        android:textSize="@dimen/body"
        android:text="@string/Campaign" />

      <com.kickstarter.ui.views.IconTextView
        icon_text_view:iconType="material"
        android:textSize="@dimen/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chevron_right_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/dark_gray" />
    </RelativeLayout>

    <include layout="@layout/horizontal_line_view" />

    <RelativeLayout
      android:id="@+id/updates"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_11_half"
      android:onClick="updatesClick" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@drawable/text_selector"
        android:textSize="@dimen/body"
        android:text="@string/Updates" />

      <!-- todo: replace with icon-->
      <TextView
        android:layout_centerVertical="true"
        android:textSize="@dimen/body"
        android:id="@+id/updates_count"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <include layout="@layout/horizontal_line_view" />

    <RelativeLayout
      android:id="@+id/comments"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_11_half"
      android:onClick="commentsClick" >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@drawable/text_selector"
        android:textSize="@dimen/body"
        android:text="@string/Comments" />

      <!-- todo: replace with icon-->
      <TextView
        android:layout_centerVertical="true"
        android:textSize="@dimen/body"
        android:id="@+id/comments_count"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
  </LinearLayout>

  <TextView
    android:id="@+id/fund_message"
    android:textColor="@color/text_secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/creator_links"
    android:paddingTop="@dimen/grid_3"
    android:paddingBottom="@dimen/grid_3"/>

</RelativeLayout>
