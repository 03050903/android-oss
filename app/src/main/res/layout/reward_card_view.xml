<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/reward_card_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="4dp"
  app:cardBackgroundColor="@color/white"
  app:cardPreventCornerOverlap="false"
  android:foreground="@drawable/click_indicator_light"
  android:layout_margin="@dimen/grid_2">

  <View
    android:id="@+id/green_overlay"
    android:visibility="invisible"
    android:alpha="0.2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"/>

  <RelativeLayout
    android:id="@+id/reward_card_info"
    android:paddingBottom="@dimen/grid_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
      android:id="@+id/selected"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:visibility="gone"
      android:paddingTop="@dimen/grid_1"
      android:paddingBottom="@dimen/grid_1"
      android:paddingLeft="@dimen/grid_2"
      android:paddingRight="@dimen/grid_2"
      android:textColor="@color/white"
      android:background="@color/green"
      android:text="@string/You_selected"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <RelativeLayout
      android:layout_below="@id/selected"
      android:paddingRight="@dimen/grid_2"
      android:paddingLeft="@dimen/grid_2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/pledge_minimum"
        android:text="Pledge $15000 or more"
        style="@style/Headline"
        android:paddingTop="@dimen/grid_2"
        android:paddingBottom="@dimen/grid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <RelativeLayout
        android:id="@+id/backer_reward_info"
        android:layout_below="@id/pledge_minimum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/reward_backers_count"
          android:text="# backers"
          style="@style/BodyPrimaryMedium"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <TextView
          android:id="@+id/limited"
          android:paddingLeft="@dimen/grid_1"
          android:paddingRight="@dimen/grid_1"
          android:layout_toEndOf="@id/reward_backers_count"
          android:layout_toRightOf="@id/reward_backers_count"
          android:background="@color/gray"
          android:visibility="visible"
          style="@style/BodyPrimary"
          android:text="@string/Limited_left_of"
          android:layout_marginLeft="@dimen/grid_1"
          android:layout_marginStart="@dimen/grid_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <TextView
          android:id="@+id/all_gone"
          android:paddingLeft="@dimen/grid_1"
          android:paddingRight="@dimen/grid_1"
          android:layout_toEndOf="@id/reward_backers_count"
          android:layout_toRightOf="@id/reward_backers_count"
          android:background="@color/gray"
          android:visibility="visible"
          android:layout_marginStart="@dimen/grid_1"
          android:layout_marginEnd="@dimen/grid_1"
          android:text="@string/All_gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      </RelativeLayout>

      <TextView
        android:id="@+id/reward_description"
        android:layout_below="@id/backer_reward_info"
        style="@style/Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/grid_2"
        android:paddingBottom="@dimen/grid_2"/>

      <LinearLayout
        android:id="@+id/estimate"
        android:layout_marginRight="@dimen/grid_2"
        android:orientation="vertical"
        android:layout_below="@id/reward_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

          <TextView
            android:id="@+id/estimated_delivery"
            android:text="@string/Estimated_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CaptionSecondary"
            android:paddingBottom="@dimen/grid_1_half"/>

          <TextView
            android:id="@+id/estimated_delivery_date"
            android:text="September 2016"
            style="@style/CaptionPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/grid_1"/>

      </LinearLayout>

      <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/reward_description"
        android:layout_toRightOf="@id/estimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/shipping_destination"
          style="@style/CaptionSecondary"
          android:text="@string/Shipping_destinations"
          android:visibility="visible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="@dimen/grid_1_half"/>

        <TextView
          android:id="@+id/shipping_summary"
          style="@style/CaptionPrimary"
          android:text="Ships to anywhere in the world"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      </LinearLayout>

    </RelativeLayout>
  </RelativeLayout>

  <View
    android:id="@+id/white_overlay"
    android:visibility="invisible"
    android:alpha="0.6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"/>

</android.support.v7.widget.CardView>
