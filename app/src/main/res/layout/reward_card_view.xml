<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/reward_card_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="4dp"
  app:cardBackgroundColor="@color/white"
  android:foreground="@drawable/click_indicator_light"
  android:layout_margin="@dimen/grid_2">

  <View
    android:id="@+id/green_overlay"
    android:visibility="invisible"
    android:alpha="0.2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"/>

  <RelativeLayout
    android:id="@+id/reward_card_info"
    android:paddingBottom="@dimen/grid_2"
    android:paddingLeft="@dimen/grid_2"
    android:paddingRight="@dimen/grid_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
      android:id="@+id/selected"
      android:visibility="gone"
      android:paddingLeft="@dimen/grid_1"
      android:paddingRight="@dimen/grid_1"
      android:textColor="@color/white"
      android:background="@color/green"
      android:text="@string/You_selected"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/pledge_minimum"
      android:layout_below="@id/selected"
      style="@style/TextPrimary.Headline"
      android:paddingTop="@dimen/grid_2"
      android:paddingBottom="@dimen/grid_2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <RelativeLayout
      android:id="@+id/backer_info"
      android:layout_below="@id/pledge_minimum"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.kickstarter.ui.views.IconTextView
        app:iconType="ss_kickstarter"
        android:id="@+id/backer_badge"
        style="@style/TextPrimary.Headline"
        android:paddingRight="@dimen/grid_1"
        android:paddingEnd="@dimen/grid_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/backer_icon"
        android:textColor="@color/green"/>

      <TextView
        android:id="@+id/reward_backers_count"
        android:layout_toEndOf="@id/backer_badge"
        android:layout_toRightOf="@id/backer_badge"
        style="@style/TextPrimary.Body.Medium"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/limited_reward_labels"
      android:layout_below="@id/backer_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/limited"
        android:background="@color/yellow"
        android:visibility="gone"
        style="@style/TextSecondary.Body"
        android:text="@string/Limited_left_of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/all_gone"
        android:background="@color/gray"
        android:visibility="gone"
        android:text="@string/All_gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
      android:id="@+id/reward_description"
      android:layout_below="@id/limited_reward_labels"
      style="@style/TextPrimary.Subhead"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/grid_2"
      android:paddingBottom="@dimen/grid_2"/>

    <TextView
      android:id="@+id/estimated_delivery"
      android:text="@string/Estimated_delivery"
      android:layout_below="@id/reward_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/TextSecondary.Body"
      android:paddingBottom="@dimen/grid_1_half" />

    <TextView
      android:id="@+id/estimated_delivery_date"
      android:layout_below="@id/estimated_delivery"
      style="@style/TextPrimary.Body"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </RelativeLayout>

  <View
    android:id="@+id/white_overlay"
    android:visibility="invisible"
    android:alpha="0.6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"/>

</android.support.v7.widget.CardView>
