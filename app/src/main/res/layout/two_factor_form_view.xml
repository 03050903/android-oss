<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="fill_parent">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_1"
    android:layout_marginBottom="@dimen/grid_4"
    android:textColor="@color/dark_gray"
    android:text="@string/Please_enter_your_verification_code_to_continue" />

  <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
      android:id="@+id/code"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:singleLine="true"
      android:textAppearance="@style/BodyPrimary"
      android:hint="@string/Enter_code" />

  </android.support.design.widget.TextInputLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_3"
    android:layout_marginBottom="@dimen/grid_1">

    <Button
      style="@style/BorderButton"
      android:id="@+id/resend_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginRight="@dimen/grid_1"
      android:layout_marginEnd="@dimen/grid_1"
      android:text="@string/Resend" />

    <Button
      style="@style/Button"
      android:background="@drawable/button_green"
      android:id="@+id/login_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="@dimen/grid_1"
      android:layout_marginStart="@dimen/grid_1"
      android:enabled="false"
      android:text="@string/Submit" />

  </LinearLayout>

</LinearLayout>

