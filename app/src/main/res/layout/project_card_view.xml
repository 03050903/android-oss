<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/transparent"
  android:foreground="@drawable/tap_indicator"
  android:elevation="@dimen/ksr_card_elevation"
  android:layout_marginLeft="@dimen/grid_3"
  android:layout_marginRight="@dimen/grid_3"
  android:layout_marginBottom="@dimen/grid_1"
  android:layout_marginTop="@dimen/grid_3" >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/project_card_photo_view" />

    <LinearLayout
      android:background="@color/white"
      android:layout_below="@id/project_card_photo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/grid_2"
      android:paddingLeft="@dimen/grid_2"
      android:paddingRight="@dimen/grid_2"
      android:orientation="vertical">

      <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/title"
        android:paddingBottom="@dimen/grid_2" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/grid_2">

        <com.kickstarter.ui.views.IconTextView
          icon_text_view:iconType="material"
          android:id="@+id/category_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingRight="@dimen/grid_1_half"
          android:text="@string/local_offer_icon"
          android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/category"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/grid_1_half"
          android:paddingRight="@dimen/grid_1"
          android:textColor="@color/text_dark" />

        <com.kickstarter.ui.views.IconTextView
          icon_text_view:iconType="material"
          android:id="@+id/location_icon"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/category"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/grid_1"
          android:paddingRight="@dimen/grid_1_half"
          android:text="@string/location_on_icon"
          android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/location"
          android:ellipsize="end"
          android:singleLine="true"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/location_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/grid_1_half"
          android:textColor="@color/text_dark" />

      </LinearLayout>

      <ProgressBar
        style="@style/KsrProgressBar"
        android:id="@+id/percentage_funded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/progress_bar_min_height"
        android:paddingTop="@dimen/grid_1"
        android:progress="50" />

      <include layout="@layout/project_stats_view" />

    </LinearLayout>

  </RelativeLayout>
</android.support.v7.widget.CardView>
