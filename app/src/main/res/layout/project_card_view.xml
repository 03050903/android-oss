<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_height="match_parent"
  android:layout_width="match_parent">

  <android.support.v7.widget.CardView
    android:id="@+id/project_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/transparent"
    android:foreground="@drawable/click_indicator_light"
    android:elevation="@dimen/card_elevation"
    android:focusable="true"
    android:layout_marginLeft="@dimen/grid_3"
    android:layout_marginRight="@dimen/grid_3"
    android:layout_marginBottom="@dimen/grid_1"
    android:layout_marginTop="@dimen/grid_3" >

    <RelativeLayout
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <include layout="@layout/project_card_photo_view"/>

      <LinearLayout
        android:id="@+id/project_card_info"
        android:layout_below="@id/project_card_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/grid_2"
        android:paddingLeft="@dimen/grid_2"
        android:paddingRight="@dimen/grid_2"
        android:orientation="vertical">

        <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Headline"
          android:paddingBottom="@dimen/grid_2" />

        <LinearLayout
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginBottom="@dimen/grid_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <com.kickstarter.ui.views.IconTextView
            android:id="@+id/category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local_offer_icon"
            android:contentDescription="@string/category_icon_content_description"
            style="@style/BodyPrimary"/>

          <TextView
            android:id="@+id/category"
            android:text="Category name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grid_1_half"
            android:paddingRight="@dimen/grid_2"
            style="@style/BodyPrimary" />

          <com.kickstarter.ui.views.IconTextView
            android:id="@+id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_on_icon"
            android:contentDescription="@string/location_icon_content_description"
            style="@style/BodyPrimary" />

          <TextView
            android:id="@+id/location"
            android:text="Location"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/grid_1_half"
            android:paddingRight="@dimen/grid_1_half"
            android:paddingStart="@dimen/grid_1_half"
            android:paddingEnd="@dimen/grid_1_half"
            style="@style/BodyPrimary" />

        </LinearLayout>

        <ProgressBar
          style="@style/ProgressBar"
          android:visibility="visible"
          android:id="@+id/percentage_funded"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/progress_bar_min_height"
          android:progress="50" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/project_state_views"
        android:layout_below="@id/project_card_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/successfully_funded_view"
          android:text="@string/Successfully_funded"
          android:visibility="gone"
          style="@style/BodyPrimaryMedium"
          android:textColor="@color/white"
          android:background="@color/green"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="30dp"/>

        <TextView
          android:id="@+id/funding_unsuccessful_view"
          android:visibility="gone"
          style="@style/BodyPrimaryMedium"
          android:textColor="@color/white"
          android:background="@color/dark_gray"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="30dp"/>

      </LinearLayout>

      <include layout="@layout/project_stats_view"
        android:layout_below="@id/project_state_views"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/grid_2"
        android:layout_marginBottom="@dimen/grid_3"
        android:layout_marginLeft="@dimen/grid_2"
        android:layout_marginRight="@dimen/grid_2"/>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

  <LinearLayout
    android:id="@+id/project_metadata"
    android:visibility="visible"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:elevation="3dp"
    android:layout_marginStart="@dimen/grid_2"
    android:layout_marginLeft="@dimen/grid_2"
    android:layout_alignStart="@id/project_card_view"
    android:layout_alignLeft="@id/project_card_view"
    android:layout_marginTop="@dimen/grid_1"
    android:paddingLeft="@dimen/grid_1"
    android:paddingRight="@dimen/grid_1"
    android:paddingTop="@dimen/grid_1"
    android:paddingBottom="@dimen/grid_1"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/grid_4">

    <LinearLayout
      android:id="@+id/potd_group"
      android:visibility="gone"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <com.kickstarter.ui.views.IconTextView
        android:id="@+id/potd_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/card_padding_action_half"
        android:text="@string/favorite_icon"
        android:textSize="@dimen/subhead"
        android:textColor="@color/green" />

      <TextView
        android:id="@+id/potd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/card_padding_action_half"
        android:text="@string/project_of_the_day"
        style="@style/BodyPrimaryMedium" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/friend_backing_group"
      android:visibility="gone"
      android:layout_gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/friend_backing_avatar"
        android:layout_gravity="center_vertical"
        android:background="@color/blue"
        android:layout_marginRight="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:layout_width="@dimen/grid_3"
        android:layout_height="@dimen/grid_3" />

      <TextView
        android:id="@+id/friend_backing_message"
        style="@style/BodyPrimaryMedium"
        android:layout_gravity="center_vertical"
        android:text="Lisa, Chris, and 11 more are backers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/starred_group"
      android:visibility="gone"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <com.kickstarter.ui.views.IconTextView
        android:text="@string/star_icon"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/subhead"
        android:textColor="@color/green"
        android:layout_marginRight="@dimen/grid_1"
        android:layout_marginEnd="@dimen/grid_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:text="@string/You_starred_this_project"
        style="@style/BodyPrimaryMedium"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>
