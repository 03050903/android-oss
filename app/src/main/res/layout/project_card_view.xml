<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@android:color/transparent"
  android:layout_marginLeft="@dimen/card_margin_x"
  android:layout_marginRight="@dimen/card_margin_x"
  android:layout_marginTop="@dimen/card_margin_y"
  android:layout_marginBottom="@dimen/card_margin_y">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
      android:id="@+id/photo_section"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:id="@+id/photo"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="photo"/>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/photo"
        android:layout_alignBottom="@+id/photo"
        android:background="@drawable/gradient">

        <TextView
          android:id="@+id/name"
          android:background="@android:color/transparent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:gravity="bottom"
          android:text="Name"
          android:textColor="@color/white"
          android:textSize="@dimen/title"
          android:padding="@dimen/keyline_1"/>
      </RelativeLayout>
     </RelativeLayout>

    <LinearLayout
      android:background="@color/white"
      android:layout_below="@id/photo_section"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/keyline_1"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/keyline_1_half">

        <com.kickstarter.ui.views.IonIconTextView
          android:id="@+id/category_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingRight="@dimen/card_padding_action_half"
          android:text="@string/ion_pricetag"
          android:textColor="@color/text_dark"/>

        <TextView
          android:id="@+id/category"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/category_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:transitionName="category"
          android:paddingLeft="@dimen/card_padding_action_half"
          android:paddingRight="@dimen/card_padding_action"
          android:text="Category"
          android:textColor="@color/text_dark"/>

        <com.kickstarter.ui.views.IonIconTextView
          android:id="@+id/location_icon"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/category"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/card_padding_action"
          android:paddingRight="@dimen/card_padding_action_half"
          android:text="@string/ion_location"
          android:textSize="@dimen/title"
          android:textColor="@color/text_dark"/>

        <TextView
          android:id="@+id/location"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/location_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/card_padding_action_half"
          android:text="Location"
          android:textColor="@color/text_dark"/>

      </LinearLayout>

    </LinearLayout>

  </RelativeLayout>
</android.support.v7.widget.CardView>
