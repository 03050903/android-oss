<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@android:color/transparent"
  android:layout_marginLeft="@dimen/card_margin_x"
  android:layout_marginRight="@dimen/card_margin_x"
  android:layout_marginTop="@dimen/card_margin_y"
  android:layout_marginBottom="@dimen/card_margin_y">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/project_card_photo_layout" />

    <LinearLayout
      android:background="@color/white"
      android:layout_below="@id/project_card_photo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/keyline_1"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/keyline_1_half">

        <com.kickstarter.ui.views.IonIconTextView
          android:id="@+id/category_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:paddingRight="@dimen/card_padding_action_half"
          android:text="@string/ion_pricetag"
          android:textColor="@color/text_dark"/>

        <TextView
          android:id="@+id/category"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/category_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:transitionName="category"
          android:paddingLeft="@dimen/card_padding_action_half"
          android:paddingRight="@dimen/card_padding_action"
          android:textColor="@color/text_dark"/>

        <com.kickstarter.ui.views.IonIconTextView
          android:id="@+id/location_icon"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/category"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/card_padding_action"
          android:paddingRight="@dimen/card_padding_action_half"
          android:text="@string/ion_location"
          android:textSize="@dimen/title"
          android:textColor="@color/text_dark"/>

        <TextView
          android:id="@+id/location"
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@id/location_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/card_padding_action_half"
          android:textColor="@color/text_dark"/>

      </LinearLayout>

      <ProgressBar
        android:id="@+id/percentage_funded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/KsrProgressBar"
        android:minHeight="@dimen/progress_bar_min_height"
        android:paddingTop="@dimen/keyline_1_half"
        android:paddingBottom="@dimen/keyline_1_half"
        android:progress="50" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingRight="@dimen/keyline_1">

          <TextView
            android:id="@+id/backers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backers"
            android:textColor="@color/dark_gray" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingRight="@dimen/keyline_1">

          <TextView
            android:id="@+id/pledged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/pledged_of"
              android:textColor="@color/dark_gray" />
            <TextView
              android:id="@+id/goal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/dark_gray" />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingRight="@dimen/keyline_1">
          <TextView
            android:id="@+id/deadline_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark" />
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/deadline_countdown_unit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/dark_gray" />
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/to_go"
              android:textColor="@color/dark_gray" />
          </LinearLayout>
        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </RelativeLayout>
</android.support.v7.widget.CardView>
