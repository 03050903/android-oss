<?xml version="1.0" encoding="utf-8"?>
<com.kickstarter.ui.views.HamburgerNavigationHeader
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/grid_8"
  android:background="@color/hamburger_navigation_header"
  android:layout_marginTop="@dimen/grid_3"
  android:theme="@style/ThemeOverlay.AppCompat.Light"
  android:orientation="vertical"
  android:gravity="bottom">

  <LinearLayout
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:visibility="gone"
      android:id="@+id/logged_out_container"
      android:orientation="horizontal"
      android:background="@drawable/click_indicator_light"
      android:paddingLeft="@dimen/grid_2"
      android:paddingStart="@dimen/grid_2"
      android:paddingRight="@dimen/grid_2"
      android:paddingEnd="@dimen/grid_2"
      android:gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <com.kickstarter.ui.views.IconButton
        android:id="@+id/logged_out_icon_button"
        android:gravity="center"
        android:text="@string/account_circle"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/logged_out_text_view"
        style="@style/BodyPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_1"
        android:layout_marginStart="@dimen/grid_1"
        android:text="@string/___Log_in"
        android:textColor="@color/black" />

    </LinearLayout>

    <RelativeLayout
      android:id="@+id/logged_in_container"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:id="@+id/user_container"
        android:background="@drawable/click_indicator_light"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/grid_2"
        android:paddingStart="@dimen/grid_2"
        android:paddingRight="@dimen/grid_2"
        android:paddingEnd="@dimen/grid_2"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
          android:id="@+id/user_image_view"
          android:adjustViewBounds="true"
          android:layout_width="@dimen/grid_4"
          android:layout_height="@dimen/grid_4" />

        <TextView
          style="@style/BodyPrimaryMedium"
          android:id="@+id/user_name_text_view"
          android:layout_marginLeft="@dimen/grid_2"
          android:layout_marginStart="@dimen/grid_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black" />


      </LinearLayout>

      <com.kickstarter.ui.views.IconButton
        android:background="@drawable/click_indicator_light"
        android:id="@+id/settings_icon_button"
        android:layout_height="@dimen/grid_6"
        android:layout_width="@dimen/grid_6"
        android:gravity="center"
        android:textSize="@dimen/icon"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:text="@string/settings_icon" />

    </RelativeLayout>

  </LinearLayout>

</com.kickstarter.ui.views.HamburgerNavigationHeader>

