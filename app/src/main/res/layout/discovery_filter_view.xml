<?xml version="1.0" encoding="utf-8"?>
<!-- Many attributes in this view are set at runtime in DiscoveryFilterViewHolder.java -->
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="?attr/selectableItemBackground"
  android:focusable="true"
  android:nextFocusRight="@id/close_button"
  android:id="@+id/discovery_filter_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

 <LinearLayout
    android:id="@+id/vertical_line_group"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginEnd="@dimen/grid_3_half"
    android:layout_marginRight="@dimen/grid_3_half">

    <include layout="@layout/vertical_line_1_5dp_view" />
  </LinearLayout>

  <RelativeLayout
    android:id="@+id/text_group"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
      android:id="@+id/filter_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:textColor="@color/white" />

    <TextView
      android:id="@+id/category_live_project_count_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:alpha="0.8"
      android:fontFamily="sans-serif-light"
      android:layout_toRightOf="@id/filter_text_view"
      android:layout_toEndOf="@id/filter_text_view"
      android:layout_marginLeft="@dimen/grid_1_half"
      android:layout_marginStart="@dimen/grid_1_half"
      android:textSize="11sp"
      android:textColor="@color/white" />

  </RelativeLayout>

</LinearLayout>
