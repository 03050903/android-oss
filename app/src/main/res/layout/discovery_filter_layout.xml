<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:icon_text_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/dark_blue_gradient"
  tools:context=".DiscoveryFilterActivity">

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/grid_1"
    android:layout_marginStart="@dimen/grid_1"
    android:scrollbars="vertical" />

  <com.kickstarter.ui.views.IconTextView
    android:id="@+id/close_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_margin="@dimen/grid_1"
    android:text="@string/close"
    android:textColor="@color/white"
    android:textSize="28sp"
    icon_text_view:iconType="material" />
</RelativeLayout>
