<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:foreground="@drawable/click_indicator_light"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/white"
  card_view:contentPaddingTop="@dimen/grid_3"
  card_view:contentPaddingBottom="@dimen/grid_3"
  card_view:contentPaddingLeft="@dimen/grid_3"
  card_view:contentPaddingRight="@dimen/grid_3"
  android:layout_marginTop="@dimen/activity_feed_view_margin_top"
  android:layout_marginBottom="@dimen/activity_feed_view_margin_bottom">

  <LinearLayout
    android:weightSum="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
      android:id="@+id/avatar"
      android:adjustViewBounds="true"
      android:layout_marginRight="@dimen/grid_1"
      android:layout_marginEnd="@dimen/grid_2"
      android:layout_width="@dimen/activity_feed_avatar_width"
      android:layout_height="@dimen/activity_feed_avatar_height" />

    <TextView
      style="@style/Subhead"
      android:id="@+id/title"
      android:bufferType="spannable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/grid_1"
      android:layout_marginRight="@dimen/grid_1"
      android:text="Username is following you!"
      android:layout_weight="1" />

    <View
      android:id="@+id/follow_button"
      android:background="@drawable/ic_follow"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="@dimen/grid_1"
      android:layout_marginStart="@dimen/grid_2" />

  </LinearLayout>

</android.support.v7.widget.CardView>
