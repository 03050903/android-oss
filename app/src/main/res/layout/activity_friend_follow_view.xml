<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  style="@style/ActivityFeedCard"
  card_view:contentPadding="@dimen/grid_3">

  <LinearLayout
    android:weightSum="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
      android:id="@+id/avatar"
      android:adjustViewBounds="true"
      android:layout_marginRight="@dimen/grid_1"
      android:layout_marginEnd="@dimen/grid_2"
      android:layout_width="@dimen/activity_feed_avatar_width"
      android:layout_height="@dimen/activity_feed_avatar_height" />

    <TextView
      style="@style/Subhead"
      android:id="@+id/title"
      android:bufferType="spannable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/grid_1"
      android:layout_marginRight="@dimen/grid_1"
      android:text="Username is following you!"
      android:layout_weight="1" />

    <View
      android:id="@+id/follow_button"
      android:background="@drawable/ic_follow"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="@dimen/grid_1"
      android:layout_marginStart="@dimen/grid_2" />

  </LinearLayout>

</android.support.v7.widget.CardView>
