<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@color/white"
  card_view:contentPaddingTop="@dimen/grid_3"
  card_view:contentPaddingBottom="@dimen/grid_3"
  card_view:contentPaddingLeft="@dimen/grid_3"
  card_view:contentPaddingRight="@dimen/grid_3"
  android:layout_marginTop="@dimen/card_margin_y"
  android:layout_marginBottom="@dimen/card_margin_y">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
      android:id="@+id/avatar"
      android:adjustViewBounds="true"
      android:layout_marginRight="@dimen/keyline_1_half"
      android:layout_width="@dimen/activity_feed_avatar_width"
      android:layout_height="@dimen/activity_feed_avatar_height" />

    <TextView
      android:id="@+id/title"
      android:bufferType="spannable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/keyline_1_half"
      android:layout_marginRight="@dimen/keyline_1_half"
      android:text="Username is following you!"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      android:textColor="@color/text_dark"
      android:layout_weight="1"/>

    <Button
      android:id="@+id/follow_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/Follow"
      android:layout_marginLeft="@dimen/keyline_1_half" />

  </LinearLayout>

</android.support.v7.widget.CardView>
