<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/project_scroll_view"
  android:layout_width="match_parent"
  android:background="@color/white"
  android:layout_height="match_parent">

  <include layout="@layout/project_media_header"/>

  <LinearLayout
    android:id="@+id/project_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/grid_3"
    android:paddingLeft="@dimen/grid_3"
    android:paddingRight="@dimen/grid_3"
    android:orientation="vertical" >

    <TextView
      android:id="@+id/project_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TextPrimary.EditorialHeadline"
      android:paddingBottom="@dimen/grid_1_half" />

    <LinearLayout
      android:weightSum="3"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:layout_weight="3"
        android:id="@+id/creator_name"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextSecondary.Body"
        android:clickable="true" />

      <LinearLayout
        android:id="@+id/backer_label"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
          android:text="@string/Youre_a_backer"
          android:singleLine="true"
          style="@style/TextPrimary.Body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <com.kickstarter.ui.views.IconTextView
          app:iconType="ss_kickstarter"
          android:id="@+id/backer_badge"
          android:layout_gravity="center_vertical"
          android:textSize="@dimen/caption"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/backer_icon"
          android:textColor="@color/green"/>
      </LinearLayout>

    </LinearLayout>

    <TextView
      android:id="@+id/blurb"
      style="@style/TextPrimary.Subhead"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/grid_3"
      android:layout_marginBottom="@dimen/grid_3"
      android:clickable="true"
      android:paddingBottom="@dimen/grid_1" />

    <RelativeLayout
      android:id="@+id/category_share_bar"
      android:layout_gravity="center_vertical"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.kickstarter.ui.views.IconTextView
        android:id="@+id/category_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/grid_1_half"
        android:paddingEnd="@dimen/grid_1_half"
        android:text="@string/local_offer_icon"
        style="@style/TextPrimary.Body"/>

      <TextView
        android:id="@+id/category"
        android:layout_toRightOf="@id/category_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/grid_1_half"
        android:paddingRight="@dimen/grid_1"
        style="@style/TextPrimary.Body" />

      <com.kickstarter.ui.views.IconTextView
        android:id="@+id/location_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/category"
        android:layout_toEndOf="@id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/grid_1"
        android:paddingRight="@dimen/grid_1_half"
        android:text="@string/location_on_icon"
        style="@style/TextPrimary.Body" />

      <TextView
        android:id="@+id/location"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toRightOf="@id/location_icon"
        android:layout_toEndOf="@id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/grid_1_half"
        android:paddingRight="@dimen/grid_1_half"
        android:paddingStart="@dimen/grid_1_half"
        android:paddingEnd="@dimen/grid_1_half"
        style="@style/TextPrimary.Body" />

    </RelativeLayout>

    <ProgressBar
      style="@style/KsrProgressBar"
      android:id="@+id/percentage_funded"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="@dimen/progress_bar_min_height"
      android:layout_marginTop="@dimen/grid_3"
      android:progress="50" />

    <include layout="@layout/project_stats_view"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginTop="@dimen/grid_3"
      android:layout_marginBottom="@dimen/grid_3"/>

  </LinearLayout>

  <include layout="@layout/horizontal_line_thin_view" />

  <!-- todo: populate this list with friend backers-->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
      android:visibility="gone"
      android:id="@+id/friend_backing_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <include layout="@layout/project_creator_info" />

  <include layout="@layout/horizontal_line_thin_view" />

</LinearLayout>
