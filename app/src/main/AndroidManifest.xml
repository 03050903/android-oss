<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="com.kickstarter"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name=".KsrApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".activities.DiscoveryActivity"
      android:label="@string/app_name"
      android:launchMode="singleTop">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".activities.ProjectActivity"
      android:label="@string/title_activity_project"
      android:parentActivityName=".activities.DiscoveryActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.kickstarter.activities.DiscoveryActivity"/>
    </activity>
  </application>

</manifest>
